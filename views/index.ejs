<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bolg/Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    
    <section>
        <a class="btn btn-success sticky" href="/new">Post</a>
        <div class=" py-5 ctr-container ">
            <% if(locals.posts){%>
                <% posts.forEach((post) =>{%>
                    <div class="card" style="width: 18rem;">
                    <img src="<%= post.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <small><%= post.publish %></small>
                        <p><%= post.content %></p>
                        <span><%= post.author %></span><br>
                        <a href="edit/<%= post.id %>" class="btn btn-primary">Edit</a>
                        <a href="/posts/<%= post.id %>" class="btn btn-danger me-2">Delete</a>

                    </div>
            </div>
                <% }) %>
            <%} %>
            
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>